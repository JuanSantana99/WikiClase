<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WikiClase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WikiClase.styles.css" asp-append-version="true" />
    <style>
        section {
    width: 100%;
    height: 100vh;
    color: #fff;
    background: linear-gradient(1deg,red,blue,green,black);
    background-size: 200% 200%;
    position: relative;
}

li1 {
    font-size: 1rem;
    letter-spacing: 2px;
    border: solid 3px #fff;
    border-radius: 15px;
    position: absolute;
    top: 50%;
    left: 17%;
    transform: translate(-50%,-50%);
    padding: 1px 1px;
}

li2 {
    font-size: 1rem;
    letter-spacing: 2px;
    border: solid 3px #fff;
    border-radius: 15px;
    position: absolute;
    top: 50%;
    left: 23%;
    transform: translate(-50%,-50%);
    padding: 1px 1px;
}

li3 {
    font-size: 1rem;
    letter-spacing: 2px;
    border: solid 3px #fff;
    border-radius: 15px;
    position: absolute;
    top: 50%;
    /*esto es para mover de posicion las letras*/
    left: 31%;
    transform: translate(-50%,-50%);
    padding: 1px 1px;
}

li4 {
    font-size: 1rem;
    letter-spacing: 2px;
    border: solid 3px #fff;
    border-radius: 15px;
    position: absolute;
    top: 50%;
    /*esto es para mover de posicion las letras*/
    left: 38%;
    transform: translate(-50%,-50%);
    padding: 1px 1px;
}

li5 {
    font-size: 1rem;
    letter-spacing: 2px;
    border: solid 3px #fff;
    border-radius: 15px;
    position: absolute;
    top: 50%;
    /*esto es para mover de posicion las letras*/
    left: 43%;
    transform: translate(-50%,-50%);
    padding: 1px 1px;
}
    </style>
</head>
<body>
    <section>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-info border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">WikiClase</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li1 class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                        </li1>
                        <li2 class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li2>
                        <li3 class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Categorias/Index">Categorias</a>
                        </li3>
                        <li4 class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Posts/Index">Post</a>
                        </li4>
                        <li5 class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Tags/Index">Tag</a>
                        </li5>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - WikiClase - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    </section>
</body>
</html>